extends layout
block content
  h1= title
  - let vegetableid = toShow._id
  - let vegetablecolor = toShow.color
  - let vegetableweight = toShow.weight
  - let vegetablevitamins = toShow.vitamins
  - let actionid = "/resource/resource/vegetable/" + vegetableid
  form(id='vegetableForm', action=actionid, method="DELETE")

    div
        div.row
            div(class='vegetableAttr mr-3') vegetable ID is:
            div #{vegetableid}
        div.row
            div(class='vegetableAttr mr-3') vegetable color is:
            div #{vegetablecolor}
        div.row
            div(class='vegetableAttr mr-3') vegetable weight is:
            div #{vegetableweight}
        div.row
            div(class='vegetableAttr mr-3') vegetable vitamin is:
            div #{vegetablevitamins}
        input(type="submit")
  script.
    document.forms['vegetableForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
          method: 'DELETE',
          body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
          alert("Deleted successfully")
          // TODO handle body
      }).catch((error) => {
          // TODO handle error
          alert("Save failed " + error )
      });    
    });
