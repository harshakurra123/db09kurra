extends layout
block content
  h1= title
  - let vegetableid = toShow._id
  - let vegetablecolor = toShow.color
  - let vegetableweight = toShow.weight
  - let vegetablevitamins = toShow.vitamins
    div
        div.row
            div(class='vegetableAttr mr-3') vegetable ID is:
            div(class='vegetableValueAttr') #{vegetableid}
        div.row
            div(class='vegetableAttr mr-3') vegetable color is:
            div(class='vegetableValueAttr') #{vegetablecolor}
        div.row
            div(class='vegetableAttr mr-3') vegetable weight is:
            div(class='vegetableValueAttr') #{vegetableweight}
        div.row
            div(class='vegetableAttr mr-3') vegetable vitamin is:
            div(class='vegetableValueAttr') #{vegetablevitamins}